@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Cancelar Contrato";
    Inmueble inmueble = (Inmueble)ViewBag.Inmueble;

    var deuda = ViewBag.Debe;
    var debe = 0;

}

<h1><i class="bi bi-x-square-fill">   </i>Cancelar</h1>
<h3>¿Está seguro de querer cancelar este contrato?</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cancelar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.InquilinoId)  <i class="bi bi-file-person"></i>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Inquilino.Nombre)
                    @Html.DisplayFor(model => model.Inquilino.Apellido)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.InmuebleId)  <i class="bi bi-house-fill"></i>
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Inmueble.Direccion)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaInicio)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.FechaCierre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaCierre)
                </dd>
                <dt class="col-sm-6 text-danger">
                    Fecha de Cancelación
                </dt>
                <dd class="col-sm-8 text-danger">
                    @DateTime.Now.ToString("dd/MM/yyyy")
                </dd>
                <dt class="col-sm-6 text-danger">
                    Multa a pagar
                </dt>
                <dd class="col-sm-8 text-danger">
                    $@Model.CalcularMulta()
                </dd>
                <dt class="col-sm-6 text-danger">
                    Debe meses de pago:
                </dt>
                <dd class="col-sm-8 text-danger">
                    @if (ViewBag.Debe != null)
                    { debe = deuda; }
                    @debe
                </dd>
            </dl>
            <div class="form-group">
                <form asp-action="Cancelar">
                    <input type="submit" value="Confirmar" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-outline-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                        </svg>
                    </a>
                </form>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
