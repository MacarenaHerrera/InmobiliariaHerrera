@model Inmobiliaria.Models.Pago


    @{
        ViewData["Title"] = "Crear";
        Contrato c = (Contrato)ViewBag.Contrato;
    }

    <h1>Crear</h1>
    <h1><i class="bi bi-credit-card-fill">   </i>Pagos@(" de " + c.Inquilino.Apellido + " en " + c.Inmueble.Direccion)</h1>

    <div class="row">
        <div class="col-md-4 mx-auto">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" readonly asp-for="ContratoId" value="@c.Id" class="form-control" />
                <input type="hidden" readonly asp-for="Importe" value="@c.Precio" class="form-control" />


                <div class="form-group">
                    <label asp-for="ContratoId" class="control-label"></label>
                    <input asp-for="ContratoId" class="form-control" value="@c.Id" disabled />
                    <span asp-validation-for="ContratoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Importe" class="control-label"></label>
                    <input asp-for="@c.Precio" class="form-control" value="$@c.Precio" disabled />
                    <span asp-validation-for="Importe" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label>Direccion Inmueble</label>
                    <input disabled value="@c.Inmueble.Direccion" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Nombre Inquilino</label>
                    <input disabled value="@c.Inquilino.Nombre @c.Inquilino.Apellido" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input type="date" asp-for="Fecha" class="form-control" value="@DateTime.Now" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="PorContrato" class="btn btn-outline-danger" asp-route-id="@c.Id">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
            </svg>
        </a>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
